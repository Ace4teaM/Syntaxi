               <TextBox Name="InputFilter" Text="{Binding Path=InputFilter, TargetNullValue='', UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True, ValidatesOnDataErrors=True, ValidatesOnNotifyDataErrors=True}" />
            </DockPanel>
            <DockPanel Name="itemGroup_Recursive">
               <TextBlock DockPanel.Dock="Top" TextWrapping="Wrap" Margin="0,5,0,5">Récursif</TextBlock>
               <CheckBox Name="Recursive" IsChecked="{Binding Path=Recursive}" />

<DataGrid x:Class="editor.View.ObjectContentGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignWidth="530" d:DesignHeight="162"
          AutoGenerateColumns="False"
          IsReadOnly="True">
    <DataGrid.Columns>
        <DataGridTextColumn Width="120" Header="Type" Binding="{Binding ObjectType}"></DataGridTextColumn>
        <DataGridTextColumn Width="*" Header="Filename" Binding="{Binding Filename}"></DataGridTextColumn>
        <DataGridTextColumn Width="auto" Header="Position" Binding="{Binding Position}"></DataGridTextColumn>
        <DataGridTemplateColumn Width="auto" Header="Paramètres">
            <DataGridTemplateColumn.CellTemplate>
                <DataTemplate>
                    <Button Width="20">...</Button>
                </DataTemplate>
            </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
    </DataGrid.Columns>
</DataGrid>
